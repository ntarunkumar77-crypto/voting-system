 <!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>Dashboard • VoterMgmt</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="app">
      <div class="card" style="grid-template-columns:1fr;">
        <div class="panel-right">
          <div class="form">
            <div style="display:flex;justify-content:space-between;align-items:center">
              <div>
                <div style="font-weight:700;font-size:18px">Dashboard</div>
                <div class="small">Quick summary</div>
              </div>
              <div class="center">
                <div class="avatar">U</div>
              </div>
            </div>

            <div style="margin-top:14px" class="grid">
              <div class="stat">
                <div class="small">Total Voters</div>
                <div style="font-weight:700;font-size:18px">—</div>
              </div>
              <div class="stat">
                <div class="small">Votes cast</div>
                <div style="font-weight:700;font-size:18px">—</div>
              </div>
              <div class="stat">
                <div class="small">Polling Stations</div>
                <div style="font-weight:700;font-size:18px">—</div>
              </div>
            </div>

            <div style="margin-top:12px">
              <a href="/" class="btn btn-ghost">Back to home</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/script.js"></script>
  </body>
</html>
