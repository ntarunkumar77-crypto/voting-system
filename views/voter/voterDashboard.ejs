 <!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>Voter â€¢ Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="app">
      <div class="card" style="grid-template-columns:1fr;">
        <div class="panel-right">
          <div class="form">
            <div style="display:flex;justify-content:space-between;align-items:center">
              <div>
                <div style="font-weight:700;font-size:18px">Your Dashboard</div>
                <div class="small">Welcome back, <%= voter ? voter.name : 'Voter' %></div>
              </div>
              <div class="center">
                <a class="small" href="/logout">Logout</a>
              </div>
            </div>

            <div style="margin-top:14px">
              <div class="stat">
                <div class="small">Vote status</div>
                <div style="font-weight:700"><%= voter && voter.hasVoted ? 'You have voted' : 'Not yet voted' %></div>
              </div>

              <% if (voter && !voter.hasVoted) { %>
                <div style="margin-top:12px">
                  <a class="btn" href="/voter/vote">Cast your vote</a>
                </div>
              <% } %>
            </div>

          </div>
        </div>
      </div>
    </div>
    <script src="/js/script.js"></script>
  </body>
</html>
